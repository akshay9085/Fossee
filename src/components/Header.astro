    .hack-button {
        display: flex;
        flex-direction: column;
        padding: 1vh 2vw;
        z-index: 0;
        width: 20vw;
        max-width: 40vw;
        border: 2px solid blue;
        margin: 20px 20px 20px 20px;
        color: blue;
        background-color: white;
        text-decoration: none;
        font-size: 2vh;
        letter-spacing: 1.5px;
        align-items: center;
        justify-content: center;
        font-weight: 500;
        overflow: hidden;
    }

    .hack-button {
        position: relative;
        overflow: hidden;
        cursor: pointer;
    }

    .hack-button a {
        position: relative;
        text-decoration: none;
        transition: all .35s ease-Out;
    }

    #slide {
        width: 100%;
        height: 100%;
        left: -400px ;
        background: #BFC0C0;
        position: absolute;
        bottom: 0;
        transition: all .35s ease-Out;
    }

    .hack-button:hover #slide {
        left: 0;
        background-color: rgb(6, 6, 77);
    }
    .hack-button:hover a{
        color: white;
    }

    @keyframes zoomIn {
        from {
            transform: scale(1.3);
        }
        to {
            transform: scale(1);    
        }
    }

    @media screen and (max-width: 754px) {
        .registration{
            margin-top: 10vh;
        }
        .head{
            flex-direction: column-reverse;
            height: 100vh;
        }

        .hack-heading{
            font-size: 3vh;
        }

        .hack-button{
            width: 60vw;
        }

        .hack-img img{
            height: 25vh;
            width: 100%;
        }

        .map img{
            height: 40vh;
        }
    }

    @media screen and (max-width: 982px) {
        .head{
            margin-top: 6vh;
            /* margin-top: 8vh; */
        }
    }

  </style>

